{% extends 'base.html.twig' %}

{% block title %}Food{% endblock %}

{% block body %}
    <h1>Food</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ food.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ food.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ food.description }}</td>
            </tr>
            <tr>
                <th>ImagePath</th>
                <td>{{ food.imagePath }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ food.createdAt ? food.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ food.price }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>{{ food.category }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_food_item_index') }}">back to list</a>

    <a href="{{ path('app_food_item_edit', {'id': food.id}) }}">edit</a>

    {{ include('food_item/_delete_form.html.twig') }}
{% endblock %}
